<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.dsc.healthPoint.server.stepCounter.repository.StepMapper">
    <insert id="insertSteps" parameterType="jp.co.dsc.healthPoint.server.stepCounter.Step">
        INSERT INTO steps(user_id, step, record_timestamp) VALUES (#{userId}, #{step}, #{recordTimestamp});
    </insert>
</mapper>